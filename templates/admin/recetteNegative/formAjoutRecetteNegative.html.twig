{% extends 'base.html.twig' %}

{% block title %}
    {% if recetteNegative.id is defined %}
        Modification d'une recette
    {% else %}
        Ajout d'une recette
    {% endif %}
{% endblock %}

{% block body %}
    <h1 class="text-center pt-2">
        {% if recetteNegative.id is defined %}
            Modification d'une recette
        {% else %}
            Ajout d'une recette
        {% endif %}
    </h1>

    {{ form_start(formRecetteNegative,{'attr':{'novalidate':'novalidate'}}) }}

    {% if recetteNegative.id is defined %}
        {{ form_row(formRecetteNegative.id, {'attr': {'hidden': 'hidden'}}) }}
    {% endif %}
    
    <div class="row">
        <div class="col-8">
            {{ form_row(formRecetteNegative.nomRecetteNegative) }}
            <div class="row">
                <div class="col">{{form_row(formRecetteNegative.personneRecetteNegative)}}</div>
                <div class="col">{{form_row(formRecetteNegative.typeRecetteNegative)}}</div>
            </div>
            <div class="row">
                <div class="col">{{form_row(formRecetteNegative.preparationdureeRecetteNegative)}}</div>
                <div class="col">{{form_row(formRecetteNegative.cuissonRecetteNegative)}}</div>
            </div>
            {{ form_row(formRecetteNegative.ingredientRecetteNegative) }}
            {{ form_row(formRecetteNegative.preparationRecetteNegative) }}
        </div>    
        <div class="col-4">
        <div>
            <img src="{{ asset("image/imagevierge.png") }}" id="imageAffichee" alt="Card image" class="rounded mx-auto d-block img-thumbnail">
        </div>
        <div>
        {{ form_row(formRecetteNegative.imageFile, {'id':'imageFile'}) }}
        <a class="btn btn-primary d-block center" id="chargeImage"><i class="fas fa-upload"></i> Charger la recette</a>    
        </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <a href="{{ path('admin_recetteNegatives') }}" class="btn btn-warning btn-block">Annuler</a>
        </div>
        <div class="col">
            <input type="submit" class="btn btn-success btn-block" value="{% if recetteNegative.id is defined %}Valider les modifications{% else %}Valider{% endif %}">
        </div>
    </div>
    <br>

    {{ form_end(formRecetteNegative) }}
{% endblock %}

{% block javascripts %}
<script src=" {{asset("js/gestionUpload.js")}} " defer ></script>
{% endblock %}