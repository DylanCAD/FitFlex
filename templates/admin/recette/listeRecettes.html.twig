{% extends 'base.html.twig' %}

{% block title %}Gestion recettes pour prendre du poids{% endblock %}

{% block body %}
    <h1 class="titre pt-2 text-center">Gestion des recettes pour prendre du poids</h1>
    <a href="{{ path('admin_recette_ajout') }}" class="btn btn-success" style="color: black">Ajouter une recette</a>
    <hr>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col-1"></th>
                    <th scope="col-2">Nom</th>
                    <th scope="col-7">Détail</th>
                    <th scope="col-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for laRecette in lesRecettes %}
                    <tr class="table-light">
                        <td class="col-1">
                            {% if laRecette.imageRecette is not null %}
                                <img class="imgliste mx-auto d-block" style="height: auto; width: 90px; display: block;" src="{{ asset(laRecette.imageRecette) }}" alt="Card image">
                            {% endif %}
                        </td>
                        <td class="col-2" style="color: black">{{ laRecette.nomRecette }}</td>
                        <td class="col-7">
                            <p class="d-flex flex-row" style="color: black">
                                <span class="align-self-center badge badge-success" style="color: black">{{ laRecette.typeRecette }}</span>
                            </p>
                            <p style="color: black">
                                INGRÉDIENTS : {{ laRecette.ingredientRecette|slice(0,100)|raw }} ...
                            </p>
                            <p style="color: black">
                                PRÉPARATION : {{ laRecette.preparationRecette|slice(0,100)|raw }} ...
                            </p>
                        </td>
                        <td class="col-2">
                            <div class="d-flex flex-row">
                                <a href="{{ path('admin_recette_modif', {'id': laRecette.id }) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                                &nbsp;&nbsp;
                                
                                <a class="btn btn-danger" 
                                   data-toggle="modal" 
                                   data-target="#modalSimple"
                                   data-titre="Suppression de la recette"
                                   data-message="Êtes vous sur de vouloir supprimer la recette : {{ laRecette.nomRecette }}"
                                   data-libelleBouton = "Supprimer la recette"
                                   data-lien= " {{ path('admin_recette_suppression', {'id': laRecette.id}) }}"
                                ><i class="far fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
  {% include "include/_modale.html.twig" %}
{% endblock %}