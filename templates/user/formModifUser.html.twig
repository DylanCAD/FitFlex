{% extends 'base.html.twig' %}

{% block title %}Modification user{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-image: url('{{ asset('image/accueil.jpg') }}');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
{% endblock %}

{% block body %}
<br>
<div class="container border p-4">

    <h1 class="text-center pt-2">Modification d'un user</h1>

    {{ form_start(formUser,{'attr':{'novalidate':'novalidate'}}) }}

    <div class="row justify-content-center">
        <div class="row">
            <div class="col-8">
                {{ form_row(formUser.email) }}
                {{ form_row(formUser.password.first) }}
                {{ form_row(formUser.password.second) }}
                <div class="row">
                    <div class="col">{{ form_row(formUser.nom_User) }}</div>
                    <div class="col">{{ form_row(formUser.prenom_User) }}</div>
                </div>
                <div class="row">
                    <div class="col">{{ form_row(formUser.sexe_User) }}</div>
                    <div class="col">{{ form_row(formUser.age_User) }}</div>
                </div>
                <div class="row">
                    <div class="col">{{ form_row(formUser.taille_User) }}</div>
                    <div class="col">{{ form_row(formUser.poids_User) }}</div>
                </div>
                <div class="row">
                    <div class="col">{{ form_row(formUser.level_User) }}</div>
                    <div class="col">{{ form_row(formUser.objectif_User) }}</div>
                </div>
            </div>
            <div class="col-4">
                <div>
                    <img src="{{ asset("image/imagevierge.png") }}" id="imageAffichee" alt="Card image" class="rounded mx-auto d-block img-thumbnail">
                </div>
                <div>
                    {{ form_row(formUser.imageFile, {'id':'imageFile'}) }}
                    <a class="btn btn-primary d-block center" id="chargeImage"><i class="fas fa-upload"></i> Charger votre photo de profil</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col"><a href="{{ path('user_profile') }}" class="btn btn-warning btn-block">Annuler</a></div>
        <div class="col"><input type="submit" class="btn btn-success btn-block" value="Valider les modifications"></div>
    </div>
    <br>

    {{ form_end(formUser) }}

</div>
{% endblock %}
