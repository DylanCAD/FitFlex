{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
    <h1 class="text-center pt-2 ">Modifier le profil</h1>
    <form method="post">
        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" id="nom" name="nom" class="form-control" value="{{ user.nomUser }}">
        </div>
        <div class="form-group">
            <label for="prenom">Pr√©nom</label>
            <input type="text" id="prenom" name="prenom" class="form-control" value="{{ user.prenomUser }}">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" value="{{ user.email }}">
        </div>
        <div class="form-group">
            <label for="sexe">Sexe</label>
            <select id="sexe" name="sexe" class="form-control">
                <option value="homme" {% if user.sexeUser == 'homme' %}selected{% endif %}>Homme</option>
                <option value="femme" {% if user.sexeUser == 'femme' %}selected{% endif %}>Femme</option>
            </select>
        </div>
        
        <div class="d-flex align-items-center justify-content-center flex-column">
            <input type="submit" class="btn btn-primary btn-lg" value="Enregistrer">
        </div>
    </form>
{% endblock %}
